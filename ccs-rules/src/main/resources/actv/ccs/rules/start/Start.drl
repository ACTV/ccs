package actv.ccs.rules.start;

import actv.ccs.model.ConvictCichlid;
import actv.ccs.model.type.FishState;

rule "Start"
	ruleflow-group "start"
	salience 1000

	when
		$cc : ConvictCichlid();
		
	then
		modify($cc){
			setCautionLevel($cc.getCautionLevel() * 1.6),
			setState(FishState.CAUTION);
		}
end